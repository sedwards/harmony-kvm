#include <stdio.h>
#include <stdlib.h>
#include <unistd.h>
#include <bluetooth/bluetooth.h>
#include <bluetooth/l2cap.h>

#define BDADDR_STRING "B0:35:9F:0D:90:BB" // Replace with the server's MAC address
#define L2CAP_PSM 0x1001 // Replace with your desired PSM

int main(int argc, char **argv) {
    struct sockaddr_l2 server_addr = { 0 };
    int s, status;
    char data[1024];

    // Create a socket
    s = socket(AF_BLUETOOTH, SOCK_SEQPACKET, BTPROTO_L2CAP);
    if (s == -1) {
        perror("socket");
        return 1;
    }

    // Set up the server address
    server_addr.l2_family = AF_BLUETOOTH;
    server_addr.l2_psm = htobs(L2CAP_PSM);
    str2ba(BDADDR_STRING, &server_addr.l2_bdaddr);

    // Connect to the server
    status = connect(s, (struct sockaddr *)&server_addr, sizeof(server_addr));
    if (status == -1) {
        perror("connect");
        close(s);
        return 1;
    }

    // Send data to the server
    strcpy(data, "Hello, L2CAP Server!");
    status = send(s, data, sizeof(data), 0);
    if (status == -1) {
        perror("send");
        close(s);
        return 1;
    }

    // Receive data from the server
    status = recv(s, data, sizeof(data), 0);
    if (status == -1) {
        perror("recv");
        close(s);
        return 1;
    }

    printf("Received data from server: %s\n", data);

    // Close the socket
    close(s);

    return 0;
}

